<% include ../partials/header %>
    <div class="container top">
        <h1 style="text-align: center;">Create a New Campground</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="name" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" placeholder="price" min="0" step="0.01" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="location" placeholder="Yosemite National Park, CA" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="image url" required>
                </div>
                <div class="form-group">
                    <textarea class="form-control" rows="5" name="description" placeholder="description" required></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a class="font500" href="/campgrounds">Go Back</a>
        </div>

<% include ../partials/footer %>